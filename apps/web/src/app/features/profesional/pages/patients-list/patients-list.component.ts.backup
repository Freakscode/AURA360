import { Component, inject, OnInit, signal, computed } from '@angular/core';
import { CommonModule } from '@angular/common';
import { RouterLink } from '@angular/router';
import { FormsModule } from '@angular/forms';
import { CareRelationshipService } from '../../services/care-relationship.service';
import { CareRelationshipWithPatient } from '../../models/care-relationship.model';
import { AssignPatientModalComponent } from '../../components/assign-patient-modal/assign-patient-modal.component';

type SortField = 'name' | 'email' | 'date' | null;
type SortDirection = 'asc' | 'desc';
type FilterStatus = 'all' | 'active' | 'inactive';

@Component({
  selector: 'app-patients-list',
  standalone: true,
  imports: [CommonModule, RouterLink, FormsModule, AssignPatientModalComponent],
  template: `
    <div class="patients-list">
      <header class="patients-list__header">
        <div class="header__content">
          <div>
            <h1>Mis Pacientes</h1>
            <p class="patients-list__subtitle">
              Pacientes bajo mi cuidado profesional
            </p>
          </div>
          <button class="btn btn--primary" (click)="openAssignModal()">
            + Asignar Paciente
          </button>
        </div>
      </header>

      <!-- Barra de búsqueda y filtros -->
      <div class="filters-bar">
        <div class="search-box">
          <input
            type="text"
            [(ngModel)]="searchQuery"
            (ngModelChange)="onSearchChange()"
            placeholder="Buscar por nombre o email..."
            class="search-input"
          />
          @if (searchQuery()) {
            <button class="search-clear" (click)="clearSearch()">✕</button>
          }
        </div>

        <div class="filter-group">
          <label class="filter-label">Estado:</label>
          <select [(ngModel)]="filterStatus" (ngModelChange)="onFilterChange()" class="filter-select">
            <option value="all">Todos</option>
            <option value="active">Activos</option>
            <option value="inactive">Inactivos</option>
          </select>
        </div>

        <div class="sort-group">
          <label class="filter-label">Ordenar:</label>
          <button
            class="sort-btn"
            [class.active]="sortField() === 'name'"
            (click)="toggleSort('name')">
            Nombre
            @if (sortField() === 'name') {
              <span class="sort-icon">{{ sortDirection() === 'asc' ? '↑' : '↓' }}</span>
            }
          </button>
          <button
            class="sort-btn"
            [class.active]="sortField() === 'date'"
            (click)="toggleSort('date')">
            Fecha
            @if (sortField() === 'date') {
              <span class="sort-icon">{{ sortDirection() === 'asc' ? '↑' : '↓' }}</span>
            }
          </button>
        </div>
      </div>

      @if (careService.loading()) {
        <div class="patients-list__loading">
          <p>Cargando pacientes...</p>
        </div>
      } @else if (careService.error()) {
        <div class="patients-list__error">
          <p>Error: {{ careService.error() }}</p>
        </div>
      } @else {
        <div class="patients-list__summary">
          <div class="summary-card">
            <span class="summary-card__value">{{ activePatients().length }}</span>
            <span class="summary-card__label">Activos</span>
          </div>
          <div class="summary-card">
            <span class="summary-card__value">{{ inactivePatients().length }}</span>
            <span class="summary-card__label">Inactivos</span>
          </div>
          <div class="summary-card">
            <span class="summary-card__value">{{ careService.patients().length }}</span>
            <span class="summary-card__label">Total</span>
          </div>
          <div class="summary-card summary-card--highlight">
            <span class="summary-card__value">{{ filteredPatients().length }}</span>
            <span class="summary-card__label">Mostrando</span>
          </div>
        </div>

        @if (filteredPatients().length === 0 && careService.patients().length > 0) {
          <div class="patients-list__empty">
            <p>No se encontraron pacientes con los criterios de búsqueda.</p>
            <button class="btn btn--secondary" (click)="clearFilters()">Limpiar Filtros</button>
          </div>
        } @else if (careService.patients().length === 0) {
          <div class="patients-list__empty">
            <p>No tienes pacientes asignados aún.</p>
          </div>
        } @else {
          <div class="patients-table">
            <table>
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Email</th>
                  <th>Teléfono</th>
                  <th>Edad</th>
                  <th>Género</th>
                  <th>Contexto</th>
                  <th>Estado</th>
                  <th>Fecha Inicio</th>
                </tr>
              </thead>
              <tbody>
                @for (relationship of filteredPatients(); track relationship.id) {
                  <tr
                    [class.inactive]="relationship.status !== 'active'"
                    class="clickable"
                    [routerLink]="['/profesional/pacientes', relationship.id]">
                    <td class="patient-name">{{ relationship.patient.full_name }}</td>
                    <td>{{ relationship.patient.email }}</td>
                    <td>{{ relationship.patient.phone_number || '-' }}</td>
                    <td>{{ relationship.patient.age || '-' }}</td>
                    <td>{{ relationship.patient.gender || '-' }}</td>
                    <td>
                      <span [class]="'context-badge context-badge--' + relationship.context_type">
                        {{ relationship.context_type === 'independent' ? 'Independiente' : 'Institucional' }}
                      </span>
                    </td>
                    <td>
                      <span [class]="'status-badge status-badge--' + relationship.status">
                        {{ getStatusLabel(relationship.status) }}
                      </span>
                    </td>
                    <td>{{ formatDate(relationship.started_at) }}</td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        }
      }

      <!-- Modal de asignación -->
      <app-assign-patient-modal
        [isOpen]="showAssignModal()"
        (closed)="closeAssignModal()"
        (patientAssigned)="onPatientAssigned()" />
    </div>
  `,
  styles: [
