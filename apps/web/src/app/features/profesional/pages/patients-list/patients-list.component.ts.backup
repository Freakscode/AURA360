export class PatientsListComponent implements OnInit {
  readonly careService = inject(CareRelationshipService);

  // Filtros y búsqueda
  readonly searchQuery = signal('');
  readonly filterStatus = signal<FilterStatus>('all');
  readonly sortField = signal<SortField>(null);
  readonly sortDirection = signal<SortDirection>('asc');
  readonly showAssignModal = signal(false);

  // Datos computados
  readonly activePatients = computed(() =>
    this.careService.patients().filter((p) => p.status === 'active')
  );

  readonly inactivePatients = computed(() =>
    this.careService.patients().filter((p) => p.status !== 'active')
  );

  readonly filteredPatients = computed(() => {
    let patients = [...this.careService.patients()];

    // Aplicar búsqueda
    const query = this.searchQuery().toLowerCase();
    if (query) {
      patients = patients.filter(
        (p) =>
          p.patient.full_name.toLowerCase().includes(query) ||
          p.patient.email.toLowerCase().includes(query)
      );
    }

    // Aplicar filtro de estado
    const status = this.filterStatus();
    if (status === 'active') {
      patients = patients.filter((p) => p.status === 'active');
    } else if (status === 'inactive') {
      patients = patients.filter((p) => p.status !== 'active');
    }

    // Aplicar ordenamiento
    const field = this.sortField();
    const direction = this.sortDirection();

    if (field === 'name') {
      patients.sort((a, b) => {
        const comparison = a.patient.full_name.localeCompare(
          b.patient.full_name
        );
        return direction === 'asc' ? comparison : -comparison;
      });
    } else if (field === 'date') {
      patients.sort((a, b) => {
        const dateA = new Date(a.started_at).getTime();
        const dateB = new Date(b.started_at).getTime();
        const comparison = dateA - dateB;
        return direction === 'asc' ? comparison : -comparison;
      });
    }

    return patients;
  });

  async ngOnInit(): Promise<void> {
    await this.loadPatients();
  }

  private async loadPatients(): Promise<void> {
    try {
      await this.careService.loadMyPatients();
    } catch (error) {
      console.error('Error al cargar pacientes:', error);
    }
  }

  onSearchChange(): void {
    // La búsqueda se actualiza automáticamente por el signal
  }

  onFilterChange(): void {
    // El filtro se actualiza automáticamente por el signal
  }

  clearSearch(): void {
    this.searchQuery.set('');
  }

  clearFilters(): void {
    this.searchQuery.set('');
    this.filterStatus.set('all');
    this.sortField.set(null);
  }

  toggleSort(field: SortField): void {
    if (this.sortField() === field) {
      // Si ya está ordenado por este campo, cambiar dirección
      this.sortDirection.set(this.sortDirection() === 'asc' ? 'desc' : 'asc');
    } else {
      // Si es un campo nuevo, ordenar ascendente
      this.sortField.set(field);
      this.sortDirection.set('asc');
    }
  }

  getStatusLabel(status: string): string {
    const labels: Record<string, string> = {
      active: 'Activo',
      inactive: 'Inactivo',
      ended: 'Finalizado',
    };
    return labels[status] || status;
  }

  formatDate(dateString: string): string {
    const date = new Date(dateString);
    return date.toLocaleDateString('es-ES', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    });
  }

  openAssignModal(): void {
    this.showAssignModal.set(true);
  }

  closeAssignModal(): void {
    this.showAssignModal.set(false);
  }

  async onPatientAssigned(): Promise<void> {
    // El servicio ya recarga la lista automáticamente
    // Mostrar mensaje de éxito
    alert('Paciente asignado exitosamente');
  }
}
