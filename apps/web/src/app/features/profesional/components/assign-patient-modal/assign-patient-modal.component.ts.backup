import {
  Component,
  inject,
  signal,
  output,
  input,
  effect,
} from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';
import { CareRelationshipService } from '../../services/care-relationship.service';
import { PatientInfo } from '../../models/care-relationship.model';

@Component({
  selector: 'app-assign-patient-modal',
  standalone: true,
  imports: [CommonModule, FormsModule],
  template: `
    @if (isOpen()) {
      <div class="modal-overlay" (click)="onOverlayClick($event)">
        <div class="modal" (click)="$event.stopPropagation()">
          <header class="modal__header">
            <h2>Asignar Nuevo Paciente</h2>
            <button class="modal__close" (click)="close()">&times;</button>
          </header>

          <div class="modal__body">
            <!-- Búsqueda de usuarios -->
            <div class="form-group">
              <label>Buscar Usuario</label>
              <input
                type="text"
                [value]="searchQuery()"
                (input)="onSearchInput($event)"
                placeholder="Buscar por nombre o email..."
                class="form-input"
                [disabled]="loading()"
              />
              <p class="form-hint">
                Busca usuarios existentes para asignarlos como tus pacientes
              </p>
            </div>

            <!-- Resultados de búsqueda -->
            @if (loading()) {
              <div class="search-results__loading">
                <p>Buscando usuarios...</p>
              </div>
            } @else if (searchQuery().length >= 3) {
              @if (searchResults().length > 0) {
                <div class="search-results">
                  <p class="search-results__label">Resultados de búsqueda:</p>
                  @for (user of searchResults(); track user.id) {
                    <div
                      class="user-card"
                      [class.selected]="selectedUser()?.id === user.id"
                      (click)="selectUser(user)">
                      <div class="user-card__info">
                        <h4>{{ user.full_name }}</h4>
                        <p>{{ user.email }}</p>
                        @if (user.role_global) {
                          <span class="user-card__role">{{ user.role_global }}</span>
                        }
                      </div>
                      @if (selectedUser()?.id === user.id) {
                        <div class="user-card__check">✓</div>
                      }
                    </div>
                  }
                </div>
              } @else {
                <div class="search-results__empty">
                  <p>No se encontraron usuarios con ese criterio.</p>
                </div>
              }
            } @else if (searchQuery().length > 0) {
              <div class="search-results__hint">
                <p>Escribe al menos 3 caracteres para buscar</p>
              </div>
            }

            <!-- Usuario seleccionado -->
            @if (selectedUser(); as user) {
              <div class="selected-user">
                <p class="selected-user__label">Usuario seleccionado:</p>
                <div class="selected-user__card">
                  <div class="selected-user__info">
                    <h4>{{ user.full_name }}</h4>
                    <p>{{ user.email }}</p>
                  </div>
                  <button
                    class="selected-user__remove"
                    (click)="clearSelection()">
                    Cambiar
                  </button>
                </div>

                <!-- Opciones de contexto -->
                <div class="form-group">
                  <label>Tipo de Relación</label>
                  <select [(ngModel)]="contextType" class="form-select">
                    <option value="independent">Práctica Independiente</option>
                    <option value="institutional">Institucional</option>
                  </select>
                </div>

                <!-- Notas opcionales -->
                <div class="form-group">
                  <label>Notas (Opcional)</label>
                  <textarea
                    [(ngModel)]="notes"
                    placeholder="Agrega notas sobre esta relación de cuidado..."
                    class="form-textarea"
                    rows="3"></textarea>
                </div>
              </div>
            }

            <!-- Error -->
            @if (error()) {
              <div class="alert alert--error">
                {{ error() }}
              </div>
            }
          </div>

          <footer class="modal__footer">
            <button class="btn btn--secondary" (click)="close()" [disabled]="saving()">
              Cancelar
            </button>
            <button
              class="btn btn--primary"
              (click)="assignPatient()"
              [disabled]="!selectedUser() || saving()">
              @if (saving()) {
                Asignando...
              } @else {
                Asignar Paciente
              }
            </button>
          </footer>
        </div>
      </div>
    }
  `,
  styles: [
    `
